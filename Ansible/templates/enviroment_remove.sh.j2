while getopts "e:h::u::p::d::" opt; do
  case $opt in
    e)
      ENVNAME=$OPTARG;
      ;;
    h)
      HOST=$OPTARG;
      ;;
    u)
      USERNAME=$OPTARG;
      ;;
    p)
      PASSWORD=$OPTARG;
      ;;
    d)
      db=$OPTARG;
      ;;
   *)
      echo "-e <ENV_name> -h <ENV_Database IP> -u <ENV_username> -p <ENV_password> -d <ENV_database name>" >&2
      exit 1
      ;;
    :)
      echo "Option -$OPTARG requires an argument." >&2
      exit 1
      ;;
  esac
done

#Look at putting the Defaults into a file
if [[ -z $HOST ]]; then
         HOST="10.2.0.3"
  fi
if [[ -z $USERNAME ]]; then
          USERNAME="root"
   fi
if [[ -z $PASSWORD ]]; then
           PASSWORD="P@ssword123"
    fi
if [[ -z $db ]]; then
            db="acstest"
     fi

#MySQL Command
mysqlcommand="mysql -h$HOST -u$USERNAME -p$PASSWORD -s -N -e"

#Table Names
podtbl="podnetworks"
pubtbl="pubnetworks"
pritbl="primarystorage"
sectbl="secondarystorage"


#MYSQL LOCK Tables
$mysqlcommand "LOCK TABLE $db.$podtbl WRITE";
