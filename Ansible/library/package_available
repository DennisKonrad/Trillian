#!/bin/bash

ARGS="(`cat $1`)"

PACKAGE=`echo $ARGS | tr " " "\n"| awk -F= '$1=="PACKAGE"{print $2}'| tr -d '"' | sed -e 's/[[:space:]]*$//'`

if [[ -n `yum list $PACKAGE | grep 'No matching Packages to list'` ]]; then
  AVAILABILITY="true"
else
  AVAILABILITY="false"
fi
echo "
{
\"ansible_facts\": {
  \"mypackage_available\": \"${AVAILABILITY}\"
 }
}
"
